	Obituary "%o was killed by a Suffering Elemental.";
	BloodType "Green_Blood", "GreenSawBlood", "GreenSawBlood";
	SeeSound "pain/sight";
	PainSound "pain/pain";
	DeathSound "pain/death";
	ActiveSound "pain/active";
	bloodtype "GreenBloodTrails";
	Species "FlyingBalls";
	
