CLASS Underwater_Explosion : pb_special_effect_base { 
states
{
	Spawn:
		TNT1 A 1;
		TNT1 AAAA 0 a_spawnprojectile("WaterParticleXSpawner", 0, 0, random(0, 360), 2, random(60, 130));
		TNT1 AAAAA 0 a_spawnprojectile("underwater_bubles", 0, 0, random(0, 360), 2, random(0, 180));
		TNT1 AAAAA 0 a_spawnprojectile("WaterExplosionPressure", 0, 0, random(0, 360), 2, random(0, 360));
		TNT1 A 0 a_spawnprojectile("WaterExplosionPressure", 0, 0, random(0, 360), 2, random(0, 360));
		TNT1 AAAAAAAAAA 0 a_spawnprojectile("underwater_bubles", 0, 0, random(0, 360), 2, random(180, 360));
	Stop;
}
}


