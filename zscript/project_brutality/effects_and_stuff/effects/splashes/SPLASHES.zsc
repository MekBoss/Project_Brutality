CLASS underwater_bubles : pb_special_effect_base { 
Default {
	RenderStyle "Add";
	Scale 0.5;
	Speed 2;
}
States
{
	Spawn:
		TNT1 A 0;
		TNT1 A 0 A_Jump(255, "Spawn1", "Spawn2");
	Spawn1:
		TNT1 A 0 ThrustThingZ(0,2,0,1);
		BUBL A 1 Bright A_JumpIf(waterlevel < 1, "Death");
		loop;
	Spawn2:
		TNT1 A 0 ThrustThingZ(0,2,0,1);
		BUBL B 1 Bright A_JumpIf(waterlevel < 1, "Death");
		Loop;
}
}



