CLASS Explosion_Smoke : pb_smoke { 
States
{
	Spawn:
		TNT1 A 0 nodelay
		{
			int scal = frandom(0.1, 1.5);
			self.scale = (scal, scal);
			self.alpha = frandom(0.1, 0.5);
		}
		
		SMK3 B 50 {self.tics = random(30, 120);}
		SMK3 CDEFGHIJKLMN 1 {A_Fadeout(0.01); self.tics = random(1, 4);}
	wait;
}

}




















